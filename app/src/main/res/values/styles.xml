<resources>
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--action bar for registration-->
    <style name="actionbar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <!--Login Activity-->
    <style name="college_name">

        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/open_sans_regular_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="login_edit_text">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>
    <style name="login_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>
    <!--Register Activity-->
    <style name="register_view_line">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#999999</item>
    </style>

    <style name="register_field_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:background">@drawable/gradient_light_gray</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="register_edt">
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:theme">@style/cursor_pink</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="register_img" parent="Theme.AppCompat">
        <item name="android:tint">@color/pink_primary_dark</item>
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="register_spn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="register_radio_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="cursor_pink">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@color/pink_primary</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/domine</item>
    </style>
</resources>